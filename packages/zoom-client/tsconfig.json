{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": { "files": true },
  "compilerOptions": {
    "lib": ["es2022"],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "target": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "../../node_modules"],
  "references": [
    {
      "zoom-client": "../../packages/zoom-client"
    }
  ]
}
